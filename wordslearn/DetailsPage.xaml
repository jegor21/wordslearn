<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wordslearn.DetailsPage">

    <StackLayout Padding="10">
        <Label Text="Details" FontSize="Large" HorizontalOptions="Center" />

        <Label Text="Name" />
        <Label Text="{Binding Name}" />

        <Label Text="Translation" />
        <Label Text="{Binding Translation}" />

        <Label Text="Explanation" />
        <Label Text="{Binding Explanation}" />

        <Label Text="Category" />
        <Picker x:Name="categoryPicker" Title="Select Category">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Не выучено</x:String>
                    <x:String>Выучено</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Button Text="Save Changes" Clicked="OnSaveClicked" />
    </StackLayout>
</ContentPage>
