<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:wordslearn"
    x:Class="wordslearn.AppShell">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Add Word"
        ContentTemplate="{DataTemplate local:AddPage}"
        Route="AddPage" />

    <ShellContent
        Title="Edit Word"
        ContentTemplate="{DataTemplate local:EditPage}"
        Route="EditPage" />

    <ShellContent
        Title="Delete Word"
        ContentTemplate="{DataTemplate local:DeletePage}"
        Route="DeletePage" />
</Shell>
