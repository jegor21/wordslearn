<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wordslearn.AddPage">
    <StackLayout Padding="20">
        <Label Text="Name" />
        <Entry x:Name="entryName" />

        <Label Text="Translation" />
        <Entry x:Name="entryTranslation" />

        <Label Text="Explanation" />
        <Entry x:Name="entryExplanation" />

        <Label Text="Category" />
        <Entry x:Name="entryCategory" />

        <Button Text="Save" Clicked="OnSaveWordClicked" />
    </StackLayout>
</ContentPage>
